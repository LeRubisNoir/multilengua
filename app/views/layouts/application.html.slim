doctype html
html
  head
    title
      | Multilengua
    = stylesheet_link_tag    "application", :media => "all"
    = stylesheet_link_tag "foundation.min"
    = javascript_include_tag 'application'
    = csrf_meta_tags

  body
   .off-canvas-wrap
    .inner-wrap
     .fixed
       nav.tab-bar.top-bar
         section.left-small
           a#menu.left-off-canvas-toggle.menu-icon
             span
         section.middle.tab-bar-section
           h1.title Multilangua
         section.right-small
     aside.left-off-canvas-menu
       ul.off-canvas-list
         li
           label Menu
         li
           a href="home" id="home_icon" Home
           a href="about" id="about_icon"  About
           a href="contact" id="contact_icon" Contact
           a href="help" id="help_icon" Help
     div id="content"
       = yield
   = javascript_include_tag 'vendor/jquery'
   = javascript_include_tag 'vendor/jquery.min'
   = javascript_include_tag 'foundation/foundation'
   = javascript_include_tag 'foundation/foundation.offcanvas'

   javascript:
    $(document).ready(function () {
     $(document).foundation();
    })
    
    p.notice= notice
    p.alert= alert

